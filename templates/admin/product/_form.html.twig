<!-- Default Basic Forms Start -->

{{ form_start(form, { attr: { class: 'container' } }) }}
<div class="page-inner">
    <div class="page-header">
        <h3 class="fw-bold mb-3">Forms</h3>
        <ul class="breadcrumbs mb-3">
            <li class="nav-home">
                <a href="{{ path('app_dashboard') }}">
                    <i class="icon-home"></i>
                </a>
            </li>
            <li class="separator">
                <i class="icon-arrow-right"></i>
            </li>
            <li class="nav-item">
                <a href="{{ path('app_product_index') }}" class="btn btn-primary text-white">Liste de tous les produits</a>
            </li>
        </ul>
    </div>
    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <div class="card-title">Form Elements</div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <!-- Champ 'name' -->
                        <div class="col-lg-8 col-md-4">
                            <div class="form-group">
                                {{ form_label(form.category, 'Nom de la catégorie') }}
                                {{ form_widget(form.category, { attr: { class: 'form-control' } }) }}
                            </div>
                        </div>
                        <!-- Champ 'name' -->
                        <div class="col-lg-8 col-md-4">
                            <div class="form-group">
                                {{ form_label(form.name, 'Nom du produit') }}
                                {{ form_widget(form.name, { attr: { class: 'form-control', placeholder: 'Entrez le nom du produit' } }) }}
                            </div>
                        </div>
                         <!-- Champ 'price' -->
                         <div class="col-lg-8 col-md-4">
                            <div class="form-group">
                                {{ form_label(form.price, 'Prix') }}
                                {{ form_widget(form.price, { attr: { class: 'form-control', placeholder: 'Entrez le prix' } }) }}
                            </div>
                        </div>
                        
                        <!-- Champ 'description' -->
                        <div class="col-lg-8 col-md-4">
                            <div class="form-group">
                                {{ form_label(form.description, 'Description') }}
                                {{ form_widget(form.description, { attr: { class: 'form-control', rows: 5, placeholder: 'Entrez la description du produit' } }) }}
                            </div>
                        </div>

                        <!-- Champ 'imageFile' -->
                        <div class="col-lg-8 col-md-4">
                            <div class="form-group">
                                {{ form_label(form.imageFile, 'Image') }}
                                {{ form_widget(form.imageFile, { attr: { class: 'form-control-file' } }) }}
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-action">
                    <button type="submit" class="btn btn-primary">{{ button_label|default('Enrégistrer') }}</button>
                </div>
            </div>
        </div>
    </div>
</div>
{{ form_end(form) }}

<!-- Default Basic Forms End -->