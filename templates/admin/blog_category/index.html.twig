{% extends 'admin.html.twig' %}

{% block title %}Blog Catégorie{% endblock %}

{% block body %}
<div class="page-header">
    <h3 class="fw-bold mb-3">Listes des catégorie blog</h3>
    <ul class="breadcrumbs mb-3">
        <li class="nav-home">
            <a href="{{ path('app_dashboard') }}">
                <i class="icon-home"></i>
               Tableau de board
            </a>
        </li>
        <li class="separator">
            <i class="icon-arrow-right"></i>
        </li>
        <li class="nav-item">
            <a href="{{ path('app_blog_category_new') }}" class="btn btn-primary text-white">Ajouter une catégorie</a>
        </li>
    </ul>
</div>
<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Catégorie</h4>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table id="basic-datatables" class="display table table-striped table-hover table-bordered">
                        <thead>
                            <tr>
                                <th>Nom</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for blog_category in blog_categories %}
                            <tr>
                                <td>{{ blog_category.name }}</td>
                                <td>
                                    <a href="{{ path('app_blog_category_edit', {'id': blog_category.id}) }}" class="btn btn-success btn-sm"><i class="fas fa-edit"></i></a>
                                    {{ include('admin/blog_category/_delete_form.html.twig') }}
                                </td>
                            </tr>
                            {% else %}
                            <tr>
                                <td colspan="4">no records found</td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}