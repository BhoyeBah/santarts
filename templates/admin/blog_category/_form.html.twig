<!-- Default Basic Forms Start -->

{{ form_start(form, { attr: { class: 'container' } }) }}
<div class="page-inner">
    <div class="page-header">
        <h3 class="fw-bold mb-3">Formulaire catégorie</h3>
        <ul class="breadcrumbs mb-3">
            <li class="nav-home">
                <a href="{{ path('app_dashboard') }}">
                    <i class="icon-home"></i>
                </a>
            </li>
            <li class="separator">
                <i class="icon-arrow-right"></i>
            </li>
            <li class="nav-item">
                <a href="" class="btn btn-primary text-white">Liste des catégories</a>
            </li>
        </ul>
    </div>
    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <div class="card-title">Nouvelle catégorie</div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <!-- Champ 'name' -->
                        <div class="col-lg-8 col-md-4">
                            <div class="form-group">
                                {{ form_label(form.name, 'Nom de la catégorie') }}
                                {{ form_widget(form.name, { attr: { class: 'form-control', placeholder: 'Entrez le nom de la catégorie' } }) }}
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-action">
                    <button type="submit" class="btn btn-primary">{{ button_label|default('Enrégistrer') }}</button>
                </div>
            </div>
        </div>
    </div>
</div>
{{ form_end(form) }}

<!-- Default Basic Forms End -->